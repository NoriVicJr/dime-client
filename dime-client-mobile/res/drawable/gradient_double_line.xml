<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid
                android:color="@color/divider_black"/>
            <size android:width="1px"/>
        </shape>
    </item>
    <item android:left="1px">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="@color/divider_grad2_bottom"
                android:startColor="@color/divider_grad2_top"
                android:type="linear" />
            <size android:width="1px"/>
        </shape>
    </item>

</layer-list>